{
    "name": "marvin/api-scaffold-php",
    "type": "project",
    "authors": [
        {
            "name": "MI",
            "email": "marc.cr51rep@gmail.com"
        }
    ],
    "require": {
        "slim/slim": "3.*",
        "vlucas/phpdotenv": "3.*",
        "illuminate/database": "^5.8",
        "nesbot/carbon": "^1.39",
        "robmorgan/phinx": "^0.11.1"
    },
    "require-dev": {
        "phpunit/phpunit": "7.*",
        "phpstan/phpstan": "^0.11.12"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "scripts": {
        "extra": {
            "script-notes": {
                "check": "Checks coding standards then runs static analysis and unit tests.",
                "migrate": "Prepare new table(s)."
            }
        },
        "check": [
            "bash ./php-tasks.sh check"
        ],
        "migrate": [
            "bash ./vendor/bin/phinx migrate"
        ],
        "pre-install-cmd": [
            "bash ./composer-pre-install.sh"
        ],
        "post-install-cmd": [
            "bash ./composer-post-install.sh"
        ]
    }
}
